{% extends 'base.html.twig' %}

{% block title %}personne
{% endblock %}

{% block monTitre %}
	{{personne.nom}}
{% endblock %}

{% block body %}
	<div class="row">
		{% for dispose in personne.disposes %}
			{% set animal = dispose.animal %}

			<div class="col-6">
				<div class="row align-items-center">
					<div class="col-12 col-md-6 col-lg-2 text-center">
						<img src="{{asset('images/' ~ animal.image)}}" class="img-fluid">
					</div>
					<div class="col text-center">
						<h2>
							<a href="{{path('afficher_animal', {'id' : animal.id } ) }}">{{ animal.nom }}</a> X{{dispose.nb}}

						</h2>
						<div>{{animal.description}}</div>
						<div>
							<a class="btn btn-primary" href="{{path('afficher_famille', {'id' : animal.famille.id } ) }}">{{animal.famille.libelle}}</a>
						</div>

						<div class="mt-2">
							{% for continentAnimal in animal.continents %}

								<a class="btn btn-secondary" href="{{ path('afficher_continent',{'id': continentAnimal.id }) }}">{{ continentAnimal.libelle }}</a>

							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
